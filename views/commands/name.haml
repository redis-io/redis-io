%section#commands
  %nav
    %a(href="#") All

    - Reference::GROUPS.each do |name, description|
      %a(href="##{name}")= description

.text

  %h1.command
    %span.name{:group => @command.group}= @command.name
    - @command.arguments.each do |arg|
      %span.arg= arg

  %article

    %aside

      - unless @related_topics.empty?
        %h2 Related topics

        %ul
          - @related_topics.each do |name, url|
            %li
              %a(href="#{url}")= name

      %h2
        Related commands

      %ul
        - @related_commands.each do |command|
          %li
            %a(href="/commands/#{command.to_param}")
              - if command == @command
                %strong= command.name
              - else
                = command.name

    %div.metadata
      - if @command.since
        %p <strong>Available since #{@command.since}.</strong>
      - else
        %p <strong>Available in Redis master.

      - if @command.complexity
        %p <strong>Time complexity:</strong> #{@command.complexity}

    ~ render("#{documentation_path}/commands/#{@name.downcase}.md")

#comments.text
  #disqus_thread

  :javascript
    var disqus_shortname = 'redisio';

    // The following are highly recommended additional parameters. Remove the slashes in front to use.
    var disqus_identifier = 'command_#{@name.downcase}';
    var disqus_url = 'http://redis.io#{@env["SCRIPT_NAME"]}';

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function() {
      var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();

  %a(href="http://disqus.com" class="dsq-brlink")
    = "Comments powered by"
    %span(class="logo-disqus")
      = "Disqus"
