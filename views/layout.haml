    .site-wrapper

      %header.site-header
        %nav.container
          .mobile-header
            %button.btn-hamburger.js-slideout-toggle
              %span.fa.fa-bars

            %a.home(href="/")
              %img(src="/images/redis-white.png" alt="Redis")

          .desktop-header
            %a.home(href="/")
              %img(src="/images/redis-white.png" alt="Redis")
            %a(href="/commands") Commands
            %a(href="/clients") Clients
            %a(href="/documentation") Documentation
            %a(href="/community") Community
            %a(href="/download") Download
            %a(href="/modules") Modules
            %a(href="/support") Support

      - if Date.today < Date.new(2018, 11, 16)
        %aside.wide-callout
          .container
            <a href="https://redislabs.com/community/redis-day-london-2018/">Join us at Redis Day London</a>: a day of Redis user stories and development updates. <a href="https://www.eventbrite.com/e/redis-day-london-tickets-47448914982">REGISTER FOR FREE</a>.
      
      %section#search
        .container
          %input.search-bar(placeholder="Search for any command or topic")

      = content

      %footer.site-footer
